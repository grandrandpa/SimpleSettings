<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="80dp"
    android:paddingTop="85dp"
    android:paddingRight="80dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/used_today"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/content_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_data_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-1.00B"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/content_text_size"
                        />
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_line_devide_h"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/used_this_month"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/content_text_size"
                        />
                    <TextView
                        android:id="@+id/tv_data_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-1.00B"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/content_text_size"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.cdtsp.settings.view.DataPanelView
            android:layout_marginTop="60dp"
            android:id="@+id/data_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/go_to_network_setting"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_flow_btn"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@android:color/darker_gray"
        android:text="@string/go_to_networks"
        />

</RelativeLayout>