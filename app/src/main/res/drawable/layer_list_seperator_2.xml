<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:width="2dp"
        android:gravity="left" >
        <shape>
            <gradient android:startColor="#22555555"
                android:centerColor="#77bbbbbb"
                android:endColor="#22555555"
                android:angle="90"
                />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:width="1.2dp"
        android:gravity="right">
        <shape>
            <gradient android:startColor="#00222222"
                android:centerColor="#77bbbbbb"
                android:endColor="#00222222"
                android:angle="90"
                />
        </shape>
    </item>

</layer-list>